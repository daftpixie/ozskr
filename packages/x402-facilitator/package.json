{
  "name": "@ozskr/x402-facilitator",
  "version": "0.1.0-beta",
  "description": "Self-hosted x402 payment facilitator for Solana with governance hooks",
  "license": "MIT",
  "author": {
    "name": "VT Infinite, Inc",
    "email": "matthew@vt-infinite.com",
    "url": "https://ozskr.ai"
  },
  "bugs": {
    "url": "https://github.com/daftpixie/ozskr/issues",
    "email": "matthew@vt-infinite.com"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "x402-facilitator": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daftpixie/ozskr.git",
    "directory": "packages/x402-facilitator"
  },
  "keywords": [
    "x402",
    "facilitator",
    "solana",
    "payments",
    "ai-agent",
    "delegation",
    "governance",
    "spl-token"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "node -e \"const ua=process.env.npm_config_user_agent||'';if(!ua.includes('pnpm')){const p=require('./package.json');const d=JSON.stringify(p.dependencies||{});if(d.includes('workspace:')){console.error('ERROR: workspace: protocol in dependencies. Use pnpm publish, not npm publish.');process.exit(1)}}\" && pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@solana/kit": "^2.1.0",
    "@x402/core": "^2.3.0",
    "@x402/svm": "^2.3.0",
    "@ozskr/agent-wallet-sdk": "workspace:*",
    "hono": "^4.11.9",
    "@hono/node-server": "^1.14.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "vitest": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
