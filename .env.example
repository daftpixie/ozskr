# ozskr.ai Environment Variables
# Copy to .env.local and fill in values

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Public URL for CORS and redirects
NODE_ENV=development                        # development | production | test

# Solana RPC (Helius recommended)
NEXT_PUBLIC_HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_KEY  # Helius RPC endpoint with API key
NEXT_PUBLIC_SOLANA_NETWORK=devnet                                            # devnet | mainnet-beta
NEXT_PUBLIC_HOPE_MINT=HoPExxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx          # $HOPE token mint address (optional override)
HELIUS_API_KEY=your-helius-api-key                                           # Helius API key for balance queries (same key as RPC URL)

# Supabase (PostgreSQL database and auth)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co  # Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key                # Supabase anonymous/public key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key            # Service role key (server-only, bypasses RLS)

# JWT Authentication
JWT_SECRET=your-secure-random-secret-min-32-chars  # Minimum 32 characters, generate with: openssl rand -base64 32

# Admin
ADMIN_WALLETS=  # Comma-separated admin wallet addresses for whitelist/metrics access

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY  # Claude API key for AI content generation

# fal.ai (image/video generation)
FAL_KEY=your-fal-key  # fal.ai API key for media generation

# Mem0 (AI memory layer)
MEM0_API_KEY=your-mem0-key  # Mem0 API key for agent memory persistence

# Infisical (secrets management - optional)
INFISICAL_SITE_URL=https://app.infisical.com  # Infisical instance URL
INFISICAL_PROJECT_ID=your-project-id          # Infisical project identifier
INFISICAL_CLIENT_ID=your-client-id            # Service token client ID
INFISICAL_CLIENT_SECRET=your-client-secret    # Service token secret

# OpenAI (content moderation)
OPENAI_API_KEY=sk-YOUR_KEY  # OpenAI API key for content moderation pipeline

# Upstash Redis (rate limiting and caching)
UPSTASH_REDIS_REST_URL=https://YOUR_ID.upstash.io  # Upstash Redis REST endpoint
UPSTASH_REDIS_REST_TOKEN=your-token                # Upstash Redis REST token

# Trigger.dev (background job queuing)
TRIGGER_API_KEY=your-trigger-key           # Trigger.dev API key
TRIGGER_API_URL=https://api.trigger.dev    # Trigger.dev API endpoint

# Ayrshare (social media publishing)
AYRSHARE_API_KEY=your-ayrshare-key  # Ayrshare API key for multi-platform posting

# Twitter/X Direct API (optional — only needed if using DIRECT social provider)
TWITTER_CLIENT_ID=your-twitter-client-id                        # OAuth 2.0 Client ID from Twitter Developer Portal
TWITTER_TOKEN_ENCRYPTION_KEY=your-32-char-encryption-key-here   # AES-256 key for token encryption (min 32 chars, generate with: openssl rand -base64 32)

# Langfuse (AI observability and tracing)
LANGFUSE_SECRET_KEY=sk-lf-YOUR_KEY     # Langfuse secret key
LANGFUSE_PUBLIC_KEY=pk-lf-YOUR_KEY     # Langfuse public key
LANGFUSE_BASEURL=https://cloud.langfuse.com  # Langfuse instance URL

# Cloudflare (R2 storage, Workers, CDN)
CLOUDFLARE_ACCOUNT_ID=your-account-id      # Cloudflare account identifier
R2_ACCESS_KEY_ID=your-r2-key               # R2 access key ID
R2_SECRET_ACCESS_KEY=your-r2-secret        # R2 secret access key
R2_BUCKET_NAME=ozskr-content               # R2 bucket name for content storage

# x402 Facilitator (payment settlement — optional, Phase 7.M)
X402_FACILITATOR_URL=                      # Facilitator service endpoint (e.g., http://localhost:4020)
X402_FACILITATOR_FALLBACK_URL=             # Fallback facilitator (defaults to PayAI if empty)
X402_FEE_PAYER_ADDRESS=                    # Fee payer public key for gas sponsorship
